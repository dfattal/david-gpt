{
  "budgets": [
    {
      "path": "/**",
      "timings": [
        {
          "metric": "first-contentful-paint",
          "budget": 1500,
          "tolerance": 200
        },
        {
          "metric": "largest-contentful-paint", 
          "budget": 2500,
          "tolerance": 300
        },
        {
          "metric": "first-input-delay",
          "budget": 100,
          "tolerance": 20
        },
        {
          "metric": "cumulative-layout-shift",
          "budget": 0.1,
          "tolerance": 0.05
        },
        {
          "metric": "speed-index",
          "budget": 3000,
          "tolerance": 500
        }
      ],
      "resourceSizes": [
        {
          "resourceType": "script",
          "budget": 200000,
          "tolerance": 20000
        },
        {
          "resourceType": "stylesheet",
          "budget": 50000,
          "tolerance": 10000
        },
        {
          "resourceType": "image", 
          "budget": 100000,
          "tolerance": 20000
        },
        {
          "resourceType": "font",
          "budget": 30000,
          "tolerance": 5000
        },
        {
          "resourceType": "total",
          "budget": 400000,
          "tolerance": 50000
        }
      ]
    },
    {
      "path": "/api/**",
      "timings": [
        {
          "metric": "response-time",
          "budget": 500,
          "tolerance": 100
        },
        {
          "metric": "time-to-first-byte",
          "budget": 200,
          "tolerance": 50
        }
      ]
    },
    {
      "path": "/api/chat",
      "timings": [
        {
          "metric": "first-token-latency",
          "budget": 200,
          "tolerance": 50
        },
        {
          "metric": "tokens-per-second",
          "budget": 50,
          "tolerance": 10
        }
      ]
    }
  ],
  "lighthouse": {
    "performance": 90,
    "accessibility": 95,
    "best-practices": 90,
    "seo": 90,
    "pwa": 80
  },
  "database": {
    "queries": {
      "conversations-list": {
        "budget": 500,
        "tolerance": 100
      },
      "messages-load": {
        "budget": 300,
        "tolerance": 50
      },
      "message-insert": {
        "budget": 200,
        "tolerance": 50
      },
      "conversation-create": {
        "budget": 200,
        "tolerance": 50
      },
      "title-generate": {
        "budget": 1000,
        "tolerance": 200
      }
    },
    "connections": {
      "max-concurrent": 20,
      "idle-timeout": 30000,
      "connection-timeout": 10000
    }
  },
  "memory": {
    "heap-size-mb": {
      "initial": 50,
      "max-growth-per-session": 100,
      "warning-threshold": 200
    },
    "component-renders": {
      "max-renders-per-second": 10,
      "warning-threshold": 50
    }
  }
}